extends base

block content
	link(rel="stylesheet", href="stylesheets/new.css", type="text/css")
	#main.wrapper
		header.header
			h1.header--title De_Kelder
			nav.header--nav
				input(type="checkbox")#switch.header--nav--input
				ul.header--nav--list
					each val, index in ["1","4","5"]
						li(class="item-" + (index+1)).header--nav--list--item
							a(href="http://10.8.0." + val + ":3099").header--nav--list--item--link 10.#{val}
				label(for="switch").header--nav--label
					.header--nav--label--arrow.arrow-left
					.header--nav--label--arrow.arrow-right
		section.wrapper--section.container-fluid
			.wrapper--section--practice-projects
				each val, index in ["Oefenen","Projecten"]
					.dropdown
						button(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")#dropdownMenuButton.btn.btn-secondary.btn-lg.dropdown-toggle #{val}
						div(aria-labelledby="dropdownMenuButton").dropdown-menu
							each thing in data[index].rows
								a(href="http://" + url + ":" + thing.port).dropdown-item #{thing.name}
								.dropdown-divider
